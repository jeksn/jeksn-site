---
import Head from '../components/Head.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const { frontmatter } = Astro.props;
---
<!doctype html>
<html lang="en">
	<Head title={frontmatter.title} />
	<Header />
	<section class="py-12 px-4">
		<div class="mt-6 max-w-screen-md mx-auto">
			<div class="space-y-4">
				<h1 class="text-4xl mb-3">{frontmatter.title}</h1>
				{frontmatter.date ? <span class="text-sm text-white/80">{frontmatter.date}</span> : ''}
				<!-- <p class="text-white/80">{frontmatter.description}</p> -->
			</div>
			<div class="markdown">
				<slot />
			</div>
		</div>
		</div>
	</section>
	<Footer />
</html>
