---
import Head from '../components/Head.astro';
import Layout from '../layouts/Layout.astro';

const allSnippets = Object.values(import.meta.glob('./snippets/*.md', { eager: true }));

const title = 'Snippets';
---

<Head title={title} />
<Layout>
	<section class="py-12 px-4">
		<div class="mt-6 max-w-screen-lg mx-auto">
			<h1 class="text-4xl">{title}</h1>
			<div class="pt-6 pb-44">
				<div class="flex justify-between items-center">
					<h2 class="text-2xl">All snippets</h2>
				</div>
				<ul class="grid grid-cols-1 md:grid-cols-2 gap-x-4 mt-6">
					{allSnippets.sort((a: any, b: any) => (a.frontmatter.date < b.frontmatter.date) ? 1 : -1).map((post: any) => 
						<li>
							<a href={post.url} class="flex flex-col gap-3 p-6 my-2 card h-[150px] text-sm">
								<span class="text-lg">{post.frontmatter.title}</span>
								<span class="text-sm text-white/80">{post.frontmatter.description}</span>
							</a>
						</li>
					)}
				  </ul>
			</div>
		</div>
	</section>
</Layout>


