---
import Head from '../components/Head.astro';
import LayoutLight from '../layouts/LayoutLight.astro';
import NowData from '../../public/data/now.json';

import Hero from '../components/Hero.astro';
const title = 'Now';
const subtitle = "What I'm currently focusing on.";

// Extract categories from data if needed
const categories = ['Current Focus', 'Projects', 'Learning'];
---

<Head title={title} />
<LayoutLight>
	<Hero title={title} subtitle={subtitle} />
	<section class="pt-12 pb-16 px-4">
		<div class="mt-6 max-w-screen-lg mx-auto">
			<div class="grid grid-cols-1 md:grid-cols-5 gap-8">
				<!-- Left sidebar with categories -->
				<div class="md:col-span-1">
					<div class="sticky top-8 space-y-8">
						<div>
							<ul class="space-y-2">
								<li>
									<a href="#now" class="text-sm text-[#939393] hover:text-white transition-colors">
										Current Focus
									</a>
								</li>
								<li>
									<a href="#about" class="text-sm text-[#939393] hover:text-white transition-colors">
										About This Page
									</a>
								</li>
							</ul>
						</div>
					</div>
				</div>

				<!-- Right content area with now information -->
				<div class="md:col-span-4 space-y-12">
					<!-- Current Focus Section -->
					<div id="now" class="scroll-mt-8">
						<h2 class="text-2xl font-medium text-white mb-6">Current Focus</h2>
						<ul class="space-y-6">
							{NowData.map((item) => (
								<li class="grid grid-cols-1 text-sm gap-2">
									<div class="space-y-1">
										<p class="text-white">{item.name}</p>
										<p class="text-[#939393] whitespace-pre-line">{item.description}</p>
									</div>
								</li>
							))}
						</ul>
					</div>

					<!-- About Section -->
					<div id="about" class="scroll-mt-8">
						<h2 class="text-2xl font-medium text-white mb-6">About This Page</h2>
						<p class="text-sm text-[#939393]">
							This is a <a href="https://nownownow.com/about" class="text-white hover:underline" target="_blank">now page</a>. 
							It shows what I'm currently focused on and what I'm working on right now. 
							It's updated regularly to reflect my current priorities and interests.
						</p>
					</div>
				</div>
			</div>
		</div>
	</section>
</LayoutLight>

<style>
	/* Smooth scrolling for anchor links */
	html {
		scroll-behavior: smooth;
	}
</style>
